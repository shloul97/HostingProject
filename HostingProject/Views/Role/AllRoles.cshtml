@model IEnumerable<IdentityRole>;
@{
    ViewData["Title"] = "Roles";
}


<div class="container-fluid">

    
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-success" asp-action="CreateRole" asp-controller="Role">Create New Role</a>
                    </div>
                </div>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                <div class="row">
                    <div class="col-12">
                        <div class="account-form">
                            <div class="card" style="width: 100%;">
                                <div class="card-body">
                                    <h2 class="card-title">Role Name : <span class="text-success">@item.Name</span></h2>
                                    <h6 class="card-subtitle mb-2 text-muted"></h6>
                                    <a class="btn btn-danger" asp-action="RemoveRole" asp-controller="Role" asp-route-roleId="@item.Id">Remove</a>
                                    <a class="btn btn-warning" asp-action="EditRole" asp-controller="Role" asp-route-roleId="@item.Id">Edit</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                
                }
                
               
            }
            </div>
            <div class="col-md-2"></div>
        </div>
    
</div>
