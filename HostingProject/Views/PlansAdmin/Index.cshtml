@model IEnumerable<PlanViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            @if (Model.Any())
            {
                <div class="mb-3">
                    <a class="btn btn-success" asp-action="AddPlan" asp-controller="PlansAdmin">Add Plan</a>
                </div>
                
                <table class="table-bordered" style="width: 100%; text-align:center;">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.planId)</th>
                            <th>@Html.DisplayNameFor(x => x.planName)</th>
                            <th>@Html.DisplayNameFor(x => x.planType)</th>
                            <th>@Html.DisplayNameFor(x => x.price)</th>
                            <th>Functionality</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.planId</td>
                                <td>@item.planName</td>
                                <td>@item.planType</td>
                                <td>@item.price</td>
                                <td>
                                    <a asp-action="EditPlan" asp-controller="PlansAdmin" asp-route-id="@item.planId" class="btn btn-warning">Edit</a>
                                    <a asp-action="EditPlan" asp-controller="PlansAdmin" asp-route-id="@item.planId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <h1>There's No plans To Display</h1>
                <a class="btn btn-success" asp-action="AddPlan" asp-controller="PlansAdmin">Add Plan</a>
            }


        </div>
        <div class="col-md-2"></div>
    </div>
</div>




